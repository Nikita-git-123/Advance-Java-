<web-app>

<context-param>
		<param-name> url </param-name>
		<param-value> http://www.facebook.com </param-value>
	</context-param>

	<servlet>
		<servlet-name> FirstServlet </servlet-name>
		<servlet-class> com.demo.cookie.FirstServlet </servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name> FirstServlet </servlet-name>
		<url-pattern> /First </url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name> SecondServlet </servlet-name>
		<servlet-class> com.demo.cookie.SecondServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name> SecondServlet </servlet-name>
		<url-pattern> /Second </url-pattern>
	</servlet-mapping>

</web-app>